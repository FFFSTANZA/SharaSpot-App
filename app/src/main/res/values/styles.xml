<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Premium Button Styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_gradiant_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Premium Text Styles -->
    <style name="TextAppearance.SharaSpot.Heading1">
        <item name="android:textSize">@dimen/text_size_hero</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.SharaSpot.Heading2">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.SharaSpot.Heading3">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.SharaSpot.Title">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.SharaSpot.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_height_normal</item>
    </style>

    <style name="TextAppearance.SharaSpot.Caption">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.SharaSpot.Label">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.Premium">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">@dimen/spacing_lg</item>
        <item name="android:elevation">@dimen/card_elevation</item>
    </style>

    <!-- Text Field Styles -->
    <style name="TextInputLayout.Premium" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/neutral_50</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_corner_radius</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="BottomSheet.Premium" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.SharaSpot.BottomSheet</item>
        <item name="backgroundTint">@color/surface</item>
    </style>

    <style name="ShapeAppearance.SharaSpot.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
